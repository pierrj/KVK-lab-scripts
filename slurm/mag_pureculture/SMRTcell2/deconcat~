#!/bin/bash
#SBATCH --job-name=SMRTcell2_G3_1A_deconcat
#SBATCH --account=fc_kvkallow
#SBATCH --partition=savio2_knl
#SBATCH --qos=savio_normal
#SBATCH --nodes=1
#SBATCH --time=72:00:00
#SBATCH --mail-user=pierrj@berkeley.edu
#SBATCH --mail-type=ALL
#SBTACH --output=/global/scratch/users/pierrj/eccDNA/magnaporthe_pureculture/rawdata/SMRTcell2/G3_1A/deconcat_output.txt
#SBATCH --error=/global/scratch/users/pierrj/eccDNA/magnaporthe_pureculture/rawdata/SMRTcell2/G3_1A/deconcat_error.txt
cd /global/scratch/users/pierrj/eccDNA/magnaporthe_pureculture/rawdata/SMRTcell2/G3_1A
samtools fastq demux.bam > demux.fastq
cd ~/scripts/ciderseq
python3 ciderseq.py --no-separation --no-alignment --no-annotation --no-phasing --format fastq deconcat_config.json /global/scratch/users/pierrj/eccDNA/magnaporthe_pureculture/rawdata/SMRTcell2/G3_1A/demux.fastq
cd /global/scratch/users/pierrj/eccDNA/magnaporthe_pureculture/rawdata/SMRTcell2/G3_1A
echo "Number of DeConcat reads"
grep -c ">" demux..fna
cp demux..fna deconcat.fasta
source activate python=2.7
pbmm2 align --preset CCS --sort --log-level INFO /global/scratch/users/pierrj/eccDNA/magnaporthe_pureculture/reference_genomes/guy11_genome_baoetal2017.mmi deconcat.fasta deconcat_mapped.bam
source deactivate
echo "Number of mapped DeConcat reads"
samtools view -c deconcat_mapped.bam
